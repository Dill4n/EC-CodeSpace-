class Circle {
  constructor(radius) {
    this._radius = radius;
  }

  get radius() {
    return this._radius;
  }

  set radius(radius) {
    this._radius = radius;
  }

  calculateArea() {
    return Math.PI * this._radius ** 2;
  }
}

const myCircle = new Circle(8);
console.log(myCircle.radius);
console.log(myCircle.calculateArea());

myCircle.radius = 7;
console.log(myCircle.radius);
console.log(myCircle.calculateArea());
