//2.

const nums = [20, 30, 25, 35, -16, 60, -100];

let sum = 0;
for (let i = 0; i < nums.length; i++) {
   sum += nums[i];
}

const average = sum / nums.length;

console.log(average);

//3.


const numz = [25, 14, 56, 15, 36, 56, 77, 18, 29, 49];

       let min = numz[0], max = numz[0]; 
       for (let i = 1; i < numz.length; i++) { 
          if (numz[i] > max) 
             max = numz[i]; 
          if (numz[i] < min) 
             min = numz[i]; 
        } 
console.log(max, min);
</script>




